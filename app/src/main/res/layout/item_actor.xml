<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/indent_10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_actor_photo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_item_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_actor_photo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/statham" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_actor_name"
        style="@style/text_roboto_700_style.12sp"
        android:layout_marginTop="@dimen/indent_12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/text_actor_statham"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/item_actor_photo_layout"
        app:layout_constraintStart_toStartOf="@id/item_actor_photo_layout"
        app:layout_constraintTop_toBottomOf="@id/item_actor_photo_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>