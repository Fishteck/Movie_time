<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/popular_movies_title_popular_now"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintStart_toEndOf="@id/popular_movies_guideline_start_vertical"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_search_view"/>
        <Constraint
            android:id="@+id/popular_movies_genres_list"
            android:alpha="0"

            />
        <Constraint
            android:id="@+id/popular_movies_refresh_layout"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/popular_movies_guideline_end_vertical"
            app:layout_constraintStart_toEndOf="@id/popular_movies_guideline_start_vertical"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_genres_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/popular_movies_title_popular_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toEndOf="@id/popular_movies_guideline_start_vertical"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_search_view"/>
        <Constraint
            android:id="@+id/popular_movies_genres_list"
            android:alpha="1"
            />
        <Constraint
            android:id="@+id/popular_movies_refresh_layout"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/popular_movies_guideline_end_vertical"
            app:layout_constraintStart_toEndOf="@id/popular_movies_guideline_start_vertical"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_genres_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
    </ConstraintSet>


    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:autoTransition="animateToEnd"
        />
    <Transition
        app:constraintSetStart="@+id/end"
        app:constraintSetEnd="@+id/start"
        app:autoTransition="animateToEnd" />
</MotionScene>
